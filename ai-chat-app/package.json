{
  "name": "ai-chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3001",
    "build": "next build",
    "start": "next start -p 3001",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:hydration": "playwright test e2e/hydration-errors.spec.ts e2e/ssr-csr-mismatch.spec.ts",
    "test:hydration:ui": "playwright test e2e/hydration-errors.spec.ts e2e/ssr-csr-mismatch.spec.ts --ui",
    "test:openai": "playwright test e2e/openai-integration.spec.ts",
    "test:openai:ui": "playwright test e2e/openai-integration.spec.ts --ui",
    "test:integration": "jest src/lib/__tests__ --testPathPattern='integration|openai|environment|rate-limit'",
    "test:all": "npm run test && npm run test:integration && npm run test:e2e"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "jsonwebtoken": "^9.0.2",
    "next": "15.4.5",
    "prisma": "^6.13.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.4.5",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
